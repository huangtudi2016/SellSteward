<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/rootPropertyTab"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginBottom="@dimen/paperMarginBottom"
        android:layout_marginLeft="@dimen/paperMarginLR"
        android:layout_marginRight="@dimen/paperMarginLR"
        android:layout_weight="1.0"
        android:background="@drawable/paper_bg2"
        android:paddingBottom="@dimen/paperShadeBottom"
        android:paddingLeft="@dimen/paperShadeLR"
        android:paddingRight="@dimen/paperShadeLR" >

        <ImageView
            android:id="@id/ivEmptyChart"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:scaleType="center"
            android:src="@drawable/ic_empty_chart" />

        <ListView
            android:id="@id/lvProperty"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:cacheColorHint="@null"
            android:divider="@color/divider"
            android:dividerHeight="1.0px"
            android:listSelector="@drawable/transparent" />
    </RelativeLayout>

    <include layout="@layout/bottom_back_search" />

</LinearLayout>